<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/confirm_tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Review action"
        android:textColor="@color/darkText"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/confirm_tx_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirm_tx_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Please confirm this action"
        android:textColor="@color/darkText"
        app:layout_constraintBottom_toTopOf="@id/confirm_tx_fee_lbl"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/confirm_tx_fee_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:text="Network fees:"
        app:layout_constraintBottom_toTopOf="@id/confirm_tx_submit_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/confirm_tx_fee_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        tools:text="123235345"
        app:layout_constraintBottom_toTopOf="@id/confirm_tx_submit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/confirm_tx_fee_lbl" />

    <TextView
        android:id="@+id/confirm_tx_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="@drawable/primary_button"
        android:gravity="center"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>